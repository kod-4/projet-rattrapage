{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Categorie</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ categorie.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorie.description }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ categorie.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-secondary my-2" href="{{ path('categorie_index') }}">Retour</a>
    <a class="btn btn-outline-primary" href="{{ path('categorie_edit', {'id': categorie.id}) }}"><i class="far fa-edit"></i></a>
    {{ include('categorie/_delete_form.html.twig') }}
</div>
{% endblock %}
