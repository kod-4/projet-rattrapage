{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Cat√©gorie</h1>
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.titre }}</td>
                <td>{{ categorie.description }}</td>
                <td>{{ categorie.active ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="d-flex">
                        <a class="link-secondary me-2" href="{{ path('categorie_show', {'id': categorie.id}) }}"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('categorie_edit', {'id': categorie.id}) }}"><i class="fas fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-outline-primary mt-2" href="{{ path('categorie_new') }}">Ajouter</a>
</div>
{% endblock %}
