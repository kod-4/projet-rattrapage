{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Livre</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ livre.resume }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ livre.prix }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/livres/' ~ livre.image) }}" alt="{{ livre.titre }}" class="img-list"></td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ livre.code }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ livre.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-secondary my-2" href="{{ path('livre_index') }}">Retour</a>
    <a class="btn btn-outline-primary" href="{{ path('livre_edit', {'id': livre.id}) }}"><i class="far fa-edit"></i></a>
    {{ include('livre/_delete_form.html.twig') }}
</div>
{% endblock %}
