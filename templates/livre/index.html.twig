{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Livre</h1>
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Resume</th>
                <th>Prix</th>
                <th>Image</th>
                <th>Code</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.resume }}</td>
                <td>{{ livre.prix }}</td>
                <td><img src="{{ asset('images/livres/' ~ livre.image) }}" alt="{{ livre.titre }}" class="img-list"></td>
                <td>{{ livre.code }}</td>
                <td>{{ livre.active ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="d-flex">
                        <a class="link-secondary me-2" href="{{ path('livre_show', {'id': livre.id}) }}"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('livre_edit', {'id': livre.id}) }}"><i class="fas fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-outline-primary mt-2" href="{{ path('livre_new') }}">Ajouter</a>
</div>
{% endblock %}
