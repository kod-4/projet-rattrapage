{{ form_start(form) }}
    <div class="row mb-3">
        <div class="col-md-6">{{ form_row(form.titre) }}</div>
        <div class="col-md-3">{{ form_row(form.marque) }}</div>
        <div class="col-md-3">{{ form_row(form.adress) }}</div>
    </div>
    <div class="row mb-3">
        <div class="col-md-12">{{ form_row(form.description) }}</div>
    </div>
    <div class="row">
        <div class="col-md-12">{{ form_row(form.active) }}</div>
    </div>
    {{ form_widget(form) }}
    <button class="btn btn-outline-primary mt-2">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
