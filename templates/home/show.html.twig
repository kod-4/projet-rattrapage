{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Home</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ home.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ home.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ home.description }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ home.marque }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ home.adress }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ home.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-secondary my-2" href="{{ path('home_index') }}">Retour</a>
    <a class="btn btn-outline-primary" href="{{ path('home_edit', {'id': home.id}) }}"><i class="far fa-edit"></i></a>
    {{ include('home/_delete_form.html.twig') }}
</div>
{% endblock %}
