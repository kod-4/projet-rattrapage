{% extends 'base.html.twig' %}

{% block title %}Home index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Home</h1>
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Marque</th>
                <th>Adresse</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for home in homes %}
            <tr>
                <td>{{ home.id }}</td>
                <td>{{ home.titre }}</td>
                <td>{{ home.description }}</td>
                <td>{{ home.marque }}</td>
                <td>{{ home.adress }}</td>
                <td>{{ home.active ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="d-flex">
                        <a class="link-secondary me-2" href="{{ path('home_show', {'id': home.id}) }}"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('home_edit', {'id': home.id}) }}"><i class="fas fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-outline-primary mt-2" href="{{ path('home_new') }}">Ajouter</a>
</div>
{% endblock %}
