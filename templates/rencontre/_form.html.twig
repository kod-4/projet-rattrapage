{{ form_start(form) }}
    <div class="row mb-3">
        <div class="col-md-6">{{ form_row(form.title) }}</div>
        <div class="col-md-6">{{ form_row(form.image) }}</div>
    </div>
    <div class="row mb-3">
        <div class="col-md-5">{{ form_row(form.start) }}</div>
        <div class="col-md-5">{{ form_row(form.end) }}</div>
        <div class="col-md-2">{{ form_row(form.journee) }}</div>
    </div>
    <div class="row mb-3">
        <div class="col-md-4">{{ form_row(form.image) }}</div>
        <div class="col-md-4">{{ form_row(form.textColor) }}</div>
        <div class="col-md-4">{{ form_row(form.backgroundColor) }}</div>
    </div>
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
