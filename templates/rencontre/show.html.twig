{% extends 'base.html.twig' %}

{% block title %}Rencontre{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Rencontre</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rencontre.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ rencontre.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ rencontre.description }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ rencontre.start ? rencontre.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ rencontre.end ? rencontre.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Journee</th>
                <td>{{ rencontre.journee ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>TextColor</th>
                <td>{{ rencontre.textColor }}</td>
            </tr>
            <tr>
                <th>BackgroundColor</th>
                <td>{{ rencontre.backgroundColor }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ rencontre.image }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-secondary my-2" href="{{ path('rencontre_index') }}">Retour</a>
    <a class="btn btn-outline-primary" href="{{ path('rencontre_edit', {'id': rencontre.id}) }}"><i class="far fa-edit"></i></a>
    {{ include('rencontre/_delete_form.html.twig') }}
</div>
{% endblock %}
