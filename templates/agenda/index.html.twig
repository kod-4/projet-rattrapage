{% extends 'base.html.twig' %}

{% block title %}Agenda index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Agenda</h1>
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sujet</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>Description</th>
                <th>Journee</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agenda in agendas %}
            <tr>
                <td>{{ agenda.id }}</td>
                <td>{{ agenda.sujet }}</td>
                <td>{{ agenda.debut ? agenda.debut|date('Y-m-d H:i') : '' }}</td>
                <td>{{ agenda.fin ? agenda.fin|date('Y-m-d H:i') : '' }}</td>
                <td>{{ agenda.description }}</td>
                <td>{{ agenda.journee ? 'Yes' : 'No' }}</td>
                <td><img src="{{ asset('images/agenda/' ~ agenda.image) }}" alt="{{ agenda.sujet }}" class="img-list"></td>
                <td>
                    <div class="d-flex">
                        <a class="link-secondary me-2" href="{{ path('agenda_show', {'id': agenda.id}) }}"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('agenda_edit', {'id': agenda.id}) }}"><i class="fas fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-outline-primary mt-2" href="{{ path('agenda_new') }}">Ajouter</a>
</div>
{% endblock %}
