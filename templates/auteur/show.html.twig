{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Auteur</h1>
    <a class="btn btn-outline-secondary my-2" href="{{ path('auteur_index') }}">Retour</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ auteur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ auteur.prenom }}</td>
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ auteur.biographie }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-primary mt-2" href="{{ path('auteur_edit', {'id': auteur.id}) }}"><i class="far fa-edit"></i></a>
    {{ include('auteur/_delete_form.html.twig') }}
</div>
{% endblock %}
