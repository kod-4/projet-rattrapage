{% extends 'base.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Auteur</h1>
    <a class="btn btn-outline-primary my-2" href="{{ path('auteur_new') }}">Ajouter</a>
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Biographie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.nom }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>{{ auteur.biographie }}</td>
                <td>
                    <div class="d-flex">
                        <a class="link-secondary me-2" href="{{ path('auteur_show', {'id': auteur.id}) }}"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('auteur_edit', {'id': auteur.id}) }}"><i class="fas fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
